<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1" author="RicardooFilho">
        <preConditions onFail="MARK_RAN" onFailMessage="A tabela locais jÃ¡ existe">
            <not>
                <tableExists tableName="locais"/>
            </not>
        </preConditions>

        <createTable tableName="locais">
            <column name="id" type="int">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_local"/>
            </column>
            <column name="descricao" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addAutoIncrement tableName="locais" columnName="id" columnDataType="int" incrementBy="1" startWith="1"/>
    </changeSet>

</databaseChangeLog>