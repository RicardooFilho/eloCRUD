<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1" author="RicardooFilho">
        <preConditions onFail="MARK_RAN" onFailMessage="A tabela Pessoa jÃ¡ existe">
            <not>
                <tableExists tableName="pessoa"/>
            </not>
        </preConditions>

        <createTable tableName="pessoa">
            <column name="id" type="int">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_pessoa"/>
            </column>
            <column name="nome" type="varchar(254)">
                <constraints nullable="false"/>
            </column>
            <column name="cpf" type="varchar(11)">
                <constraints nullable="false"/>
            </column>
            <column name="telefone" type="varchar(11)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addAutoIncrement tableName="pessoa" columnName="id" columnDataType="int" incrementBy="1" startWith="1"/>
    </changeSet>
</databaseChangeLog>