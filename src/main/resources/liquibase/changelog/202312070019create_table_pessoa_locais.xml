<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1" author="RicardooFilho">
        <preConditions onFail="MARK_RAN" onFailMessage="A tabela pessoa_locais jÃ¡ existe">
            <not>
                <tableExists tableName="pessoa_locais"/>
            </not>
        </preConditions>

        <createTable tableName="pessoa_locais">
            <column name="pessoa_id" type="int">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pfk_pessoa"/>
            </column>
            <column name="local_id" type="int">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pfk_local"/>
            </column>
        </createTable>
        
        <addForeignKeyConstraint baseTableName="pessoa_locais"
                                 baseColumnNames="pessoa_id"
                                 constraintName="fk_pessoa_locais_pessoa_id"
                                 referencedTableName="pessoa"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="pessoa_locais"
                                 baseColumnNames="local_id"
                                 constraintName="fk_pessoa_locais_local_id"
                                 referencedTableName="locais"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>