<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1" author="RicardooFilho">
        <preConditions onFail="MARK_RAN" onFailMessage="A tabela status jÃ¡ existe">
            <not>
                <tableExists tableName="status"/>
            </not>
        </preConditions>

        <createTable tableName="status">
            <column name="id" type="int">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_status"/>
            </column>
            <column name="descricao" type="varchar(30)">
                <constraints nullable="false"/>
            </column>
            <column name="situacao" type="varchar(15)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createSequence sequenceName="status_sequence" startValue="1" incrementBy="50" minValue="1" maxValue="99999"/>
    </changeSet>

</databaseChangeLog>