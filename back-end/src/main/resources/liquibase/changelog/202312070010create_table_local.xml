<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1" author="RicardooFilho">
        <preConditions onFail="MARK_RAN" onFailMessage="A tabela local já existe">
            <not>
                <tableExists tableName="local"/>
            </not>
        </preConditions>

        <createTable tableName="local">
            <column name="id" type="int">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_local"/>
            </column>
            <column name="descricao" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="RicardooFilho">
        <preConditions onFail="MARK_RAN" onFailMessage="A sequence local_id já existe">
            <not>
                <sequenceExists sequenceName="local_sequence"/>
            </not>
        </preConditions>

        <createSequence sequenceName="local_sequence" startValue="1" incrementBy="50" minValue="0" maxValue="99999"/>
    </changeSet>



</databaseChangeLog>